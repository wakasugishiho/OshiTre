<div class="background">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto bg_2" style="background-color: white; margin-top: 200px; border-radius: 10px;">
                <%= link_to root_path do %>
                    <i class="far fa-window-close text-dark fa-2x" style="float:right;"></i>
                <% end %>
                <div class="row mt-3">
                    <div class="mx-auto">
                        <h2>ログイン</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 mx-auto">
                    <table class="table">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                        <tbody>
                            <tr>
                                <td><%= f.label "メールアドレス" %></td>
                                <td><%= f.email_field :email, autofocus: true, id:"inputEmail", class:"form-control" %></td>
                            </tr>
                            <tr>
                                <td><%= f.label "パスワード" %>
                                <td><%= f.password_field :password, autocomplete: "off", id:"inputPassword", class:"form-control" %></td>
                            </tr>
                        </tbody>
                    </table>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="mx-auto actions">
                        <%= f.submit "ログイン", class:"btn btn-pink" %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

