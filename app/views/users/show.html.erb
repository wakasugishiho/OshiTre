<%= render partial: "homes/header" %>
<div class="container">
	<div class="row">
		<h1>マイページ</h1>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="row">
				<%= attachment_image_tag @user, :image, size:'100x100', fallback: "no_user_image.jpg", style:"border-radius: 50%" %>
			</div>
			<div class="row">
				<%= @user.name %>
			</div>
			<div class="row">
				<%= @user.email %>
			</div>
			<div class="row">
				<%= @user.phone_number %>
			</div>
			<div class="row">
				<%= link_to "編集", edit_user_path(@user), class:"btn btn-light" %>
			</div>
			<div class="row">
				<h2>好きタグ</h2>
			</div>
			<div class="row">
				<h2>レビュー一覧</h2>
			</div>
		</div>
		<div class="col-md-8">
			<h2>チャット一覧</h2>
			<div class="row">
				<h4>投稿一覧</h4>
			</div>
			<% @posts.each do |post| %>
			<div class="row">
				<div class="col-md-3">
					<%= attachment_image_tag post, :image, size:'100x100', fallback: "no_user_image.jpg" %>
				</div>
				<div class="col-md-7">
					<div class="row">
						<h5><%= post.title %></h5>
					</div>
					<%= post.body %>
				</div>
				<div class="col-md-2">
					<%= link_to "編集", edit_post_path(post) %>
					<%= link_to "削除", post_path(post), method: :delete, data:{confirm: "本当に削除しますか？"} %>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>