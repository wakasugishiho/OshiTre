<%= render partial: "homes/header" %>
<div class="container">
	<div class="row mt-5">
	</div>
	<div class="row">
		<div class="col-md-9">
			<div class="row">
				<% @posts.each do |post| %>
				<div class="col-md-4">
					<div class="card img-thumbnail mt-3" style="border: solid #ffc0cb 2px; border-radius: 10px;">
							<%= link_to attachment_image_tag(post, :image, size: '244x244', fallback: "no_user_image.jpg"), post_path(post), class:"card-img-top" %>
						<div class="card-body px-2 py-3">
							<div class="card-title">
								<div class="row">
									<div class="col-md-2">
										<%= attachment_image_tag post.user, :image, size:'35x35', allback: "no_user_image.jpg", style:"border-radius: 50%" %>
									</div>
									<div class="col-md-10 pt-1">
										<h5 class="text-truncate"><%= post.title %></h5>
									</div>
								</div>
							</div>
							<p class="card-text text-truncate"><%= render_with_hashtags(post.body) %></p>
						</div>
					</div>
				</div>
				<% end %>
			</div>
			<div class="row">
				<div class="col-md-6 mx-auto mt-4">
					<div class="row">
						<div class="mx-auto">
							<%= paginate @posts, theme: 'twitter-bootstrap-4' %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="row mt-3 mr-3 " style="border: solid #ffc0cb 2px; border-radius: 10px; background-color: white;">
				<div class="col-md-5">
					<%= link_to attachment_image_tag(@user, :image, size:'80x80', fallback: "no_user_image.jpg", style:"border-radius: 50%", class:"mx-auto mt-3 mb-3"), user_path(@user) %>
				</div>
				<div class="col-md-7">
					<div class="row mt-3">
						<ul style="list-style: none">
							<li><%= @user.name %><%= link_to edit_user_path(@user) do %><i class="fas fa-cog text-dark"></i><% end %></li>
							<li><%= @user.email %></li>
							<li><%= @user.phone_number %></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row mt-3 pl-2">
				<%= search_form_for @q do |f| %>
					<%= f.search_field :title_or_body_cont, :placeholder => "キーワード検索", class:"serch-form" %>
					<%= f.submit "検索", class:"btn btn-pink" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<%= render partial: "homes/footer" %>
