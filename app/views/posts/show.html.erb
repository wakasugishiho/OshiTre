<%= render partial: "homes/header" %>
<div class="container">
	<div class="row">
		<%= attachment_image_tag @post.user, :image, size:'100x100', fallback: "no_user_image.jpg", style:"border-radius: 50%" %>
		<%= @post.user.name %>
	</div>
	<div class="row">
		<div class="col-md-5">
			<%= attachment_image_tag @post, :image, size:'500x500', fallback: "no_user_image.jpg" %>
		</div>
		<div class="col-md-7">
			<h2><%= @post.title %></h2>
			<%= @post.created_at.strftime("%Y.%m.%d %H:%M") %>
			<%= @post.body %>
		</div>
	</div>
</div>
