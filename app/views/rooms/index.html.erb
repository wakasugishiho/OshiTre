<%= render partial: "homes/header" %>
<div class="container">
	<div class="row mt-5">
	</div>
	<div class="row">
		<div class="col-md-9">
			<% @rooms.each do |room| %>
			<div data-href="<%= room_path(room) %>" class="row mt-3 mr-3" style="border: solid #ffc0cb 2px; border-radius: 10px; background-color: white;">
				<div class="col-md-2" style="padding-top: 10px;">
					<%= link_to attachment_image_tag(room.messages.last.sent_user, :image, size:'80x80', fallback: "no_user_image.jpg", style:"border-radius: 50%", class:"mb-2"), room_path(room) %>
				</div>
				<div class="col-md-10 pt-3 pb-3 pr-2">
					<%= room.messages.last.content %>
				</div>
			</div>
			<% end %>
			<div class="row">
				<div class="col-md-6 mx-auto mt-4">
					<div class="row">
						<div class="mx-auto">
							<%= paginate @rooms, theme: 'twitter-bootstrap-4' %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%= render partial: "posts/user_info" %>
	</div>
</div>
<%= render partial: "homes/footer" %>