<%= render partial: "homes/header" %>
<div class="container">
	<div class="row mt-5">
	</div>
	<div class="row">
		<div class="col-md-3" style="border: solid #ffc0cb 2px; border-radius: 10px; background-color: white;">
			<div class="row">
				<%= attachment_image_tag @post, :image, size:'200x200', fallback: "no_user_image.jpg", class:"mx-auto" %>
			</div>
			<div class="row">
				<div class="col">
					<h5><%= @post.title %></h5>
				</div>
			</div>
			<div class="row">
				<div class="col mb-3">
					<%= render_with_hashtags(@post.body) %>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-10 mx-auto" style="height: 500px; overflow:auto; background-color: #fff0f5;" id="messages" data-room_id="<%= @room.id %>">
					<%= render @messages %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-10 mx-auto" style="background-color: #fff0f5;">
					<form>
  						<input class="form-control" type="text" data-behavior="room_speaker" placeholder="メッセージを入力してEnterで送信">
					</form>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="row mt-3 mr-3 " style="border: solid #ffc0cb 2px; border-radius: 10px; background-color: white;">
				<div class="col-md-5">
					<%= link_to attachment_image_tag(@user, :image, size:'80x80', fallback: "no_user_image.jpg", style:"border-radius: 50%", class:"mx-auto mt-3 mb-3"), user_path(@user) %>
				</div>
				<div class="col-md-7">
					<div class="row mt-3">
						<ul style="list-style: none">
							<li><%= @user.name %><%= link_to edit_user_path(@user), data: { "turbolinks" => false} do %><i class="fas fa-cog text-dark"></i><% end %></li>
							<li><%= @user.email %></li>
							<li><%= @user.phone_number %></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row mt-3 pr-4">
				<%= link_to "チャットを削除する", room_path(@room), method: :delete, data: {confirm: "チャットを削除すると、内容も全て削除されます。よろしいですか？"}, class:"btn btn-danger btn-block btn-lg"%>
			</div>
		</div>
	</div>
</div>
<%= render partial: "homes/footer" %>